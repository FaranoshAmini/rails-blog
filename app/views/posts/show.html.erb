<div class="container">
<div class="bio">
<%=@post.title %> by
<%=@user.name %>
<p class="footer">Comments: <%=@post.comments_counter %>,
Likes: <%=@post.likes_counter %></p>
<p><%=@post.text %></p>
</div>
<div>
<%= form_with model: @like, url: :likes do |form| %>
<%= form.hidden_field  :post_id, value: @post.id %>
<%= form.submit "like" %>
<% end %>
<% @comments.each do |comment| %>
    <div class="bio"><%= comment.author.name %>:  <%= comment.text %></div>
<% end %>    
<div>
</div>
